{:source-paths ["src"]
 :dependencies [[reagent "1.2.0"]
                [cljs-ajax "0.8.4"]
                [binaryage/devtools "1.0.7"]]
 :builds
 {:app {:target :browser
        :output-dir "resources/public/js"
        :asset-path "/js"
        :modules {:main {:init-fn opencode.ui.core/init}}
        :compiler-options {:warnings-as-errors true
                           :elide-asserts false}
        :devtools {:http-root "resources/public"
                   :http-port 8700
                   :shadow-port 7890
                   :hud {:errors :warnings :progress}
                   :autoload true
                   :preloads [devtools.preload]}
        :build-hooks [(shadow.cljs.build-report/hook {:output-to "target/build-report.html"})]
        :closure-defines {opencode.ui.state/REPO_SLUG #shadow/env "REPO_SLUG"}}}}
