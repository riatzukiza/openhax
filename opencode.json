{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "promethean-github":{
      "type":"remote",
      "url":"http://localhost:4320/github",
      "enabled": true
    },
    "clj": {
      "type": "local",
      "command": ["clojure", "-X:mcp", ":port","7890"],
      "enabled": true
    },
    "clj-kondo": {
      "type": "local",
      "command": ["npx", "clj-kondo-mcp"],
      "enabled": true
    }

  },
  "lsp": {
    "clojure": {
      "command": [
        "clojure-lsp",
        "listen"
      ],
      "extensions": [
        ".clj",
        ".cljs",
        ".cljc",
        ".edn"
      ]
    }
  },
  "tool":{
    "clj*":true
  }
}
